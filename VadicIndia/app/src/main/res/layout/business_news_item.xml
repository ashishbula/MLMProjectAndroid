<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news_item_txt_type"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin_small"
        android:textSize="@dimen/txt_size_normal"
        android:textColor="@color/colorPrimaryDark"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp"
        app:contentPadding="5dp"
        android:id="@+id/news_item_cardView_item"
        app:cardPreventCornerOverlap="true"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_v_small"
        android:layout_marginRight="@dimen/margin_v_small"
        android:layout_marginBottom="@dimen/margin_v_small">

        /*Linear Layout Repurchase incentive Item*/

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <!--New Title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bill_no"
                android:paddingLeft="1dp"
                android:id="@+id/news_item_txt_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_normal"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/gray">

            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_v_small"
                android:id="@+id/news_item_txt_detail"
                android:textSize="@dimen/txt_size_normal"></TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>