<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Withdrawal Request"/>
    </LinearLayout>



    <!--All View Layout-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Sub Title Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="Your Bank Details"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="* Update bank details if any changes"/>

            </LinearLayout>

            <!--Layout  Bank Detail REport-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:id="@+id/bank_withdrawl_frag_layout_table"
                android:layout_weight="0"
                android:orientation="vertical">
                <!--Layout for Payee NAme-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/gray_bg_box"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="Payee Name"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:gravity="left|center"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/bank_withdrawl_frag_txtView_paye_nme"/>

                </LinearLayout>

                <!--Layout for Bank Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/gray_bg_box"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="Bank Name"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:gravity="left|center"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/bank_withdrawl_frag_spin_bank_name"/>

                </LinearLayout>

                <!--Layout for Branch Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/gray_bg_box"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="Branch Name"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="13dp"
                        android:gravity="left|center"
                        android:id="@+id/bank_withdrawl_frag_txtView_branch_name"/>

                </LinearLayout>

                <!--Layout for Account No-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/gray_bg_box"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="Account No"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"
                        android:textSize="13dp"
                        android:id="@+id/bank_withdrawl_frag_txtView_acno"/>

                </LinearLayout>

                <!--Layout for Pan Detail-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/gray_bg_box"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="Pan No."/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|left"
                        android:textSize="13dp"
                        android:id="@+id/bank_withdrawl_frag_txtView_pan"/>

                </LinearLayout>

                <!--Layout for Ifsc code-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/gray_bg_box"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="Ifsc Code"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/bank_withdrawl_frag_txtView_ifsc"/>

                </LinearLayout>


            </LinearLayout>

            <!--Available and REquest Fund-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Fund Withdrawal (Minimum Request Amount 1000/-)"/>
                </LinearLayout>

                <!--Layout for Available Fund-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/gray_bg_box"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="Available Fund *"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/bank_withdrawl_frag_txtView_avail_fund"/>

                </LinearLayout>

                <!--Layout Amount, imps charge, total amount, trans password-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_margin="@dimen/margin_medium"
                    android:id="@+id/bank_withdrawl_frag_layout_fund_content"
                    android:orientation="vertical">
                    <!--Withdrawal Request Layout-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:id="@+id/bank_withdrawl_frag_layout_req_fund"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Withdrawal Amount*"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edtxt_height"
                                android:paddingLeft="@dimen/margin_small"
                                android:layout_marginTop="@dimen/margin_small"
                                android:inputType="number"
                                android:hint="Withdrawal Amount"
                                android:background="@drawable/white_bg_box_black_border"
                                android:id="@+id/bank_withdrawl_frag_edTxt_req_fund"/>

                        </LinearLayout>
                        <!--Button for check for charges-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_default" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edtxt_height"
                                android:textSize="@dimen/txt_default"
                                android:id="@+id/bank_withdrawl_frag_btn_check"
                                android:layout_marginTop="@dimen/margin_small"
                                android:text="Submit"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/selector_bg_btn"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>
                    </LinearLayout>


                    <!--Admin charge Layout-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/bank_withdrawl_frag_layout_admin_chare"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admin Charge"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edtxt_height"
                            android:paddingLeft="@dimen/margin_small"
                            android:layout_marginTop="@dimen/margin_small"
                            android:inputType="number"
                            android:enabled="false"
                            android:background="@drawable/gray_bg_box"
                            android:id="@+id/bank_withdrawl_frag_edTxt_admin_chrge"/>

                    </LinearLayout>

                    <!--TDS charge Layout-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/bank_withdrawl_frag_layout_tds_chare"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TDS Charge"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edtxt_height"
                            android:paddingLeft="@dimen/margin_small"
                            android:layout_marginTop="@dimen/margin_small"
                            android:inputType="number"
                            android:enabled="false"
                            android:background="@drawable/gray_bg_box"
                            android:id="@+id/bank_withdrawl_frag_edTxt_tds_chrge"/>

                    </LinearLayout>

                    <!--Withdrawl Amount Layout-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/bank_withdrawl_frag_layout_withdrwl_amount"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Withdrawal Amount"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edtxt_height"
                            android:paddingLeft="@dimen/margin_small"
                            android:layout_marginTop="@dimen/margin_small"
                            android:inputType="number"
                            android:enabled="false"
                            android:background="@drawable/gray_bg_box"
                            android:id="@+id/bank_withdrawl_frag_edTxt_withdrwl_amount"/>

                    </LinearLayout>


                    <!-- Transaction Password Layout-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/bank_withdrawl_frag_layout_pass"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transaction Password*"/>


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edtxt_height"
                            android:paddingLeft="@dimen/margin_small"
                            android:layout_marginTop="@dimen/margin_small"
                            android:inputType="textPassword"
                            android:background="@drawable/white_bg_box_black_border"
                            android:id="@+id/bank_withdrawl_frag_edTxt_pass"/>

                    </LinearLayout>
                </LinearLayout>

                <!--Layout for Notice -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:id="@+id/bank_withdrawl_frag_layout_notice"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bank_withdrawl_frag_Txt_notice"/>
                </LinearLayout>

                <!--Layout Button Submit-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:visibility="gone"
                    android:id="@+id/bank_withdrawl_frag_layout_send"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_bg_btn"
                        android:id="@+id/bank_withdrawl_frag_btn_req_fund"
                        android:text="Send Fund Request"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>









</LinearLayout>