                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/profile_act_txt_state"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">

                </TextView>

            </LinearLayout>

            <!--Layout for Distric-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_v_small"
                android:orientation="horizontal">

                <!--Text name-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/str_district"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/profile_act_txt_distric"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">

                </TextView>

            </LinearLayout>

            <!--Layout for Pincode-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_v_small"
                android:orientation="horizontal">

                <!--Text name-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/pincode"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/profile_act_txt_pincode"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">

                </TextView>

            </LinearLayout>

            <!--Layout for Mobile-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_v_small"
                android:orientation="horizontal">

                <!--Text name-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/mobile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/profile_act_txt_mobile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_medium">

                </TextView>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>