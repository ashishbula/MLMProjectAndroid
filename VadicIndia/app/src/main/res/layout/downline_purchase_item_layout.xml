<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:contentPadding="5dp"
        android:id="@+id/prchase_downline_item_cardView_item"
        app:cardPreventCornerOverlap="true"
        android:layout_margin="5dp">

        /*Linear Layout Downline Repurchase Item*/
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            /*Linear Layout for TextView Serial No*/
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_v_small"
                android:background="@drawable/white_bg_box_black_border"
                android:id="@+id/fragment_details_linear_layout_sno"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text="S No."
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/prchase_downline_item_txtView_sno"
                    >
                </TextView>

            </LinearLayout>

            /*Linear Layout for TextView Date*/
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_v_small"
                android:layout_marginTop="@dimen/margin_v_small"
                android:background="@drawable/white_bg_box_black_border"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text="Bill Date"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/prchase_downline_item_txtView_billdate"
                    >
                </TextView>

            </LinearLayout>

            /*Linear Layout for TextView Bill No*/
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="@dimen/margin_v_small"
                android:layout_marginTop="@dimen/margin_v_small"
                android:background="@drawable/white_bg_box_black_border"
                android:id="@+id/fragment_details_linear_layout_billno"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text="Bill No."
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/prchase_downline_item_txtView_billno"
                    >
                </TextView>

            </LinearLayout>

            /*Linear Layout for TextView Id No*/
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_v_small"
                android:layout_marginTop="@dimen/margin_v_small"
                android:background="@drawable/white_bg_box_black_border"
                android:id="@+id/fragment_details_linear_layout_assignto"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text="Id No"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/prchase_downline_item_txtView_idno"
                    >
                </TextView>

            </LinearLayout>

            /*Linear Layout for TextView Member*/
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_v_small"
                android:layout_marginTop="@dimen/margin_v_small"
                android:background="@drawable/white_bg_box_black_border"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text="Member Name"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/prchase_downline_item_txtView_member"
                    >
                </TextView>

            </LinearLayout>

            /*Linear Layout for TextView Side*/
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_v_small"
                android:layout_marginTop="@dimen/margin_v_small"
                android:background="@drawable/white_bg_box_black_border"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text="Group Name"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/prchase_downline_item_txtView_leg"
                    >
                </TextView>

            </LinearLayout>

            /*Linear Layout for TextView Bill Amount*/
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_v_small"
                android:layout_marginTop="@dimen/margin_v_small"
                android:background="@drawable/white_bg_box_black_border"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text="Bill Amount"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/prchase_downline_item_txtView_bill_amt"
                    >
                </TextView>

            </LinearLayout>

            /*Linear Layout for TextView BV*/
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_v_small"
                android:layout_marginTop="@dimen/margin_v_small"
                android:background="@drawable/white_bg_box_black_border"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text="Repurchase BV"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/prchase_downline_item_txtView_bv"
                    >
                </TextView>

            </LinearLayout>

            /*Linear Layout for TextView Package NAme*/
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="@dimen/margin_v_small"
                android:layout_marginTop="@dimen/margin_v_small"
                android:background="@drawable/white_bg_box_black_border"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text="Package Name"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/prchase_downline_item_txtView_packgeNme"
                    >
                </TextView>

            </LinearLayout>

            /*Linear Layout for TextView Status*/
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="@dimen/margin_v_small"
                android:layout_marginTop="@dimen/margin_v_small"
                android:background="@drawable/white_bg_box_black_border"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/appBar_color1"
                    android:text="Status"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="13dp"
                    android:textColor="@color/appBar_color1"
                    android:layout_height="wrap_content"
                    android:id="@+id/prchase_downline_item_txtView_status"
                    >
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>