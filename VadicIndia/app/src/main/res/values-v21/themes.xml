<resources>
<!-- the theme applied to the application or activity -->
    <!--Theme.MaterialComponents.Light.NoActionBar-->
    <style name="AppTheme_shop" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>//status bar backgroung color contating app name drawer
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>//battery, time, bar bgcolor
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item> // add this item tag inside your Theme Styles.xml and Styles(v21).xml:
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>//battery, time bar
        <item name="colorAccent">@color/colorAccent</item>//tab, loading, floating button
        <item name="android:titleTextColor">@color/PrimaryTextColor</item>
        <item name="android:textColorPrimary">@color/TextColor</item>//app name
        <item name="android:textColorSecondary">@color/colorAccent</item>//drawer, more menu three dot
        <item name="android:textColor">@color/PrimaryTextColor</item>// more menu text color, setting , logout
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar_Shop" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme_custom" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        //backgroung color of top action bar(time, battery etc.)
        <item name="colorPrimaryDark">@color/black</item>

        //backgroung color of action bar(app logo, app title )
        <item name="colorPrimary">@color/colorPrimary</item>

        <!--<item name="android:homeAsUpIndicator">@mipmap/shop_drawer</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:height">100dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
